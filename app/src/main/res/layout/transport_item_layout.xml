<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/itemcontainer"
    android:layout_height="220dp"
    android:minHeight="220dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:minHeight="220dp"
        android:id="@+id/maincontent"
        card_view:cardBackgroundColor="@color/Gray"
        card_view:cardCornerRadius="6dp"
        card_view:contentPadding="1dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_marginBottom="-6dp"
        android:clickable="true"
        card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/headercard"
                android:background="@drawable/card_view_background">
                <TextView
                    android:layout_marginTop="8dp"
                    android:textColorHint="@color/blue_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:maxLength="15"
                    android:textSize="17sp"
                    android:inputType="none"
                    android:focusableInTouchMode="false"
                    android:layout_alignParentTop="true"
                    android:id="@+id/address_departtextview"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_alignRight="@id/address_departtextview"
                    android:textColorHint="@color/blue_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:inputType="none"
                    android:focusableInTouchMode="false"
                    android:layout_below="@id/address_departtextview"
                    android:id="@+id/date_departtextview"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:textColorHint="@color/blue_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:layout_above="@+id/address_arrivetextview"
                    android:layout_alignLeft="@+id/address_arrivetextview"
                    android:inputType="none"
                    android:focusableInTouchMode="false"
                    android:id="@+id/typegoods_textview"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_marginBottom="37dp"
                    android:layout_marginLeft="30dp"
                    android:textColorHint="@color/blue_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:inputType="none"
                    android:focusableInTouchMode="false"
                    android:id="@+id/address_arrivetextview"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>