<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        card_view:cardBackgroundColor="@color/Gray"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="3dp"
        card_view:cardPreventCornerOverlap="true"
        android:layout_marginBottom="1.5dp"
        android:clickable="true"
        card_view:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_background">
            <TextView
                android:layout_marginRight="35dp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/blue_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:layout_alignParentTop="true"
                android:id="@+id/date_departtextview"
                android:textColor="@color/black"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@id/date_departtextview"
                android:textColorHint="@color/blue_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:maxLines="1"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:layout_below="@id/date_departtextview"
                android:id="@+id/address_departtextview"
                android:textColor="@color/black"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/blue_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:maxLines="1"
                android:layout_above="@+id/address_arrivettextview"
                android:layout_alignLeft="@+id/address_arrivettextview"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:id="@+id/typegoods_textview"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginBottom="37dp"
                android:layout_marginLeft="30dp"
                android:textColorHint="@color/blue_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:maxLines="1"
                android:maxLength="20"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:id="@+id/address_arrivettextview"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>