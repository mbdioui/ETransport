    <com.rey.material.widget.Spinner
        android:id="@+id/spinner_means"
        android:dropDownWidth="match_parent"
        android:popupBackground="@color/back_dark"
        android:layout_width="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/between_fields_vertical_margin"
        style="@style/Material.Widget.Spinner"
        app:rd_style="@style/Material.Drawable.Ripple.Wave"
        app:spn_arrowColor="@color/blue"
        app:spn_labelEnable="true"
        app:spn_label="moyen de transport"
        app:spn_labelTextColor="@color/light_blue"
        app:spn_labelTextSize="@dimen/text_size"
        app:spn_dividerColor="@color/blue"
        />
    <com.rey.material.widget.Spinner
        android:id="@+id/spinner_goods"
        android:popupBackground="@color/back_dark"
        android:dropDownWidth="match_parent"
        android:layout_width="fill_parent"
        android:layout_below="@+id/spinner_means"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/between_fields_vertical_margin"
        style="@style/Material.Widget.Spinner"
        app:rd_style="@style/Material.Drawable.Ripple.Wave"
        app:spn_arrowColor="@color/blue"
        app:spn_labelEnable="true"
        app:spn_label="type de marchandise"
        app:spn_labelTextColor="@color/light_blue"
        app:spn_labelTextSize="@dimen/text_size"
        app:spn_dividerColor="@color/blue"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_below="@+id/spinner_goods"
        android:id="@+id/description_transport_affreteur"
        android:layout_height="150dp"
        android:hint="@string/transport_description"
        android:textSize="@dimen/text_size"
        app:et_labelTextSize="@dimen/title_text_size"
        app:met_floatingLabelTextSize="@dimen/title_text_size"
        app:met_baseColor="@color/White"
        app:met_primaryColor="@color/light_blue"
        app:met_bottomTextSize="18sp"
        app:met_textColorHint="@color/White"
        app:met_errorColor="@color/red"
        app:et_dividerCompoundPadding="@dimen/activity_vertical_margin"
        app:met_floatingLabel="highlight"
        app:met_minCharacters="5"
        app:met_maxCharacters="110" />


</RelativeLayout>